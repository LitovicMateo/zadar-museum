{
  "kind": "collectionType",
  "collectionName": "players",
  "info": {
    "singularName": "player",
    "pluralName": "players",
    "displayName": "Player"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "first_name": {
      "type": "string",
      "required": true
    },
    "last_name": {
      "type": "string",
      "required": true
    },
    "height": {
      "type": "string",
      "required": false,
      "default": null
    },
    "date_of_birth": {
      "type": "date",
      "required": false,
      "default": null
    },
    "date_of_death": {
      "type": "date",
      "required": false,
      "default": null
    },
    "is_active_player": {
      "type": "boolean",
      "required": true
    },
    "primary_position": {
      "type": "enumeration",
      "enum": ["pg", "sg", "sf", "pf", "c"]
    },
    "secondary_position": {
      "type": "enumeration",
      "enum": ["pg", "sg", "sf", "pf", "c", "null"]
    },
    "image": {
      "type": "media",
      "multiple": false,
      "allowedTypes": ["images"]
    },
    "nationality": {
      "type": "string",
      "required": true
    }
  }
}
