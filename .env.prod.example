### Example production environment variables (do NOT commit secrets)
# Copy to .env.prod on the host and fill in secret values.

# Postgres
POSTGRES_USER=strapi
POSTGRES_PASSWORD=change_me
POSTGRES_DB=strapi

# Database connection used by Strapi when running in containers
DATABASE_HOST=postgres
DATABASE_PORT=5432
DATABASE_NAME=strapi
DATABASE_USERNAME=strapi
DATABASE_PASSWORD=change_me

# Strapi secrets - replace with strong, random values
APP_KEYS=replace_with_random_app_keys
API_TOKEN_SALT=replace_with_random_salt
ADMIN_JWT_SECRET=replace_with_admin_jwt_secret
TRANSFER_TOKEN_SALT=replace_with_random_salt
JWT_SECRET=replace_with_jwt_secret

# Frontend/runtime
VITE_API_ROOT=https://your-production-domain.example/api
PUBLIC_URL=https://your-production-domain.example
PROXY=https://your-production-domain.example

# Other settings
NODE_ENV=production
